{
    "name": "YT-Spotify Playlist Transfer",
    "version": "1.0",
    "description": "An extension where you transfer playlists from YouTube to Spotify!",
    
    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_popup":"popup.html",
        "default_icon": {
            "128": "images/icon.png"
        }
    },

    "permissions": [
        "activeTab",
        "background",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],

    "manifest_version": 2
    
}